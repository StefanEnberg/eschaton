tooltipmarker = new Tooltip(marker, "This is sparta!", 3);
map.addOverlay(tooltipmarker);
function marker_mouseover(marker){
GEvent.addListener(marker, "mouseover", function() {
tooltipmarker.show();
});
}
marker_mouseover(marker);
function marker_mouseout(marker){
GEvent.addListener(marker, "mouseout", function() {
tooltipmarker.hide();
});
}
marker_mouseout(marker);